<Window x:Class="SampleSMA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:EcngTradingXaml="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
    Title="Скользящие Средние" Height="796" Width="883">

	<Grid Margin="0,0,0,29" Height="722">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="493*" />
				<ColumnDefinition Width="552" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

			<EcngTradingXaml:CandleChart x:Name="_chart" HorizontalAlignment="Left" />
			
			<Grid Grid.Column="1" Margin="0,168,0,0" Height="62" VerticalAlignment="Top">
				<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox x:Name="Path" Text="" Grid.Row="2" />
				<Button x:Name="FindPath" Grid.Column="1" Grid.Row="2" Content="..." Width="25" HorizontalAlignment="Left" Click="FindPath_Click" />
                <EcngTradingXaml:PortfolioComboBox x:Name="Portfolios" Grid.Row="3" />
            </Grid>
            <Grid Height="122" HorizontalAlignment="Left" Margin="0,39,0,0" Name="grid1" VerticalAlignment="Top" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="255" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnHistoryStart" Grid.Row="3" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Content="Старт" Click="btnHistoryStart_Click" Margin="57,6,0,0" />
                <TextBox Height="23" HorizontalAlignment="Left" Name="txtHistoryPath" VerticalAlignment="Top" Width="255" Text="Z:\Documents\Trading\StockSharp\History Data" />
                <Button Content="..." Grid.Column="1" Height="23" Name="btnFindHistoryPath" VerticalAlignment="Top" Click="btnFindHistoryPath_Click" />
                <ProgressBar Grid.Row="1" Height="15" HorizontalAlignment="Left" Margin="0,8,0,0" Name="pbHistoryTestProgress" VerticalAlignment="Top" Width="255" />
                <TextBox Grid.Row="2" Height="23" HorizontalAlignment="Left" Name="txtHistoryRangeBegin" VerticalAlignment="Top" Width="88" Text="17.10.2011" />
                <TextBox Grid.Row="2" Height="23" HorizontalAlignment="Right" Margin="0,0,9,0" Name="txtHistoryRangeEnd" VerticalAlignment="Top" Width="91" Text="23.10.2011" />
            </Grid>
            <Grid HorizontalAlignment="Left" Name="grid3" Grid.Column="1" Height="154" VerticalAlignment="Top" Margin="0,335,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="68" />
                    <ColumnDefinition Width="187" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Label Content="Статус:" Margin="0,0,0,3" />
                <Label x:Name="Status" Grid.Column="1" Margin="0,0,0,6" />
                <Label Grid.Row="1" Content="P&amp;L:" Margin="0,0,0,3" />
                <Label x:Name="PnL" Grid.Column="1" Grid.Row="1" Margin="0,0,0,3" />
                <Label Grid.Row="2" Content="Проскаль.:" Margin="0,0,0,3" />
                <Label x:Name="Slippage" Grid.Column="1" Grid.Row="2" Margin="0,0,0,3" Height="26" VerticalAlignment="Bottom" />
                <Label x:Name="Position" Grid.Column="1" Grid.Row="3" Margin="0,0,0,3" />
                <Label Grid.Row="3" Content="Поза:" Margin="0,0,2,3" />
                <Label x:Name="Latency" Grid.Row="4" Margin="0,0,0,3" Grid.Column="1" />
                <Label Grid.Row="4" Content="Задержка:" Margin="0,0,2,3" />
            </Grid>
            <Grid Height="27" HorizontalAlignment="Left" Margin="0,6,0,0" Name="grid4" VerticalAlignment="Top" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox Height="23" HorizontalAlignment="Left" Margin="6,4,0,0" Name="txtSecurityId" VerticalAlignment="Top" Width="120" Text="RIZ1@RTS" />
                <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left" Name="txtSecurityCode" VerticalAlignment="Top" Width="120" Text="RIZ1" Margin="15,4,0,0" />
            </Grid>
            <Grid Grid.Column="1" Height="100" HorizontalAlignment="Left" Margin="0,231,0,0" Name="grid5" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="ConnectBtn" Width="100" Content="Подключиться" Click="Connect_Click" Margin="26,0,13,7" />
                <Button x:Name="ExportDde" Width="100" IsEnabled="False" Content="Экспорт DDE" Click="ExportDde_Click" Margin="26,7,13,0" Grid.Row="1" />
                <Button x:Name="CancelOrders" Grid.Column="1" Width="100" IsEnabled="False" Content="Отменить заявки" Click="CancelOrders_Click" Margin="16,0,23,7" />
                <Button x:Name="Start" Width="100" Grid.Row="2" IsEnabled="False" Content="Старт" Click="Start_Click" Margin="26,14,13,6" />
                <Button x:Name="Report" Grid.Column="1" Width="100" Grid.Row="2" IsEnabled="False" Content="Отчет" Click="Report_Click" Margin="16,14,23,6" />
            </Grid>
            <EcngTradingXaml:OrderGrid x:Name="_orders" OrderSelected="_orders_OrderSelected" Grid.Column="1" Margin="0,498,0,0" Height="108" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <EcngTradingXaml:TradeGrid x:Name="_trades" Margin="0,604,0,12" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
        </Grid>
</Window>
